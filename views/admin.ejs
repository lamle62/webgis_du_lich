<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Quản lý hệ thống</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.3/dist/leaflet.css" />
  <style>
    .admin-content {
      margin-left: 280px; /* Đẩy sang phải để tránh sidebar */
      padding: 24px;
      min-height: calc(100vh - 48px);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 16px;
      margin-bottom: 24px;
    }

    .stat-card {
      background: var(--card);
      padding: 20px;
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      border: 1px solid rgba(15,23,42,0.03);
      text-align: center;
    }

    .stat-card h3 {
      margin: 0 0 8px 0;
      font-size: 2em;
      color: var(--primary);
      font-weight: 700;
    }

    .stat-card p {
      margin: 0;
      color: var(--muted);
      font-size: 0.9em;
    }

    .admin-section {
      background: var(--card);
      padding: 20px;
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      border: 1px solid rgba(15,23,42,0.03);
      margin-bottom: 24px;
    }

    .admin-section h2 {
      margin-top: 0;
      color: var(--primary);
      font-size: 1.4em;
      border-bottom: 1px solid rgba(15,23,42,0.08);
      padding-bottom: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 12px;
    }

    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid rgba(15,23,42,0.08);
    }

    th {
      background: rgba(13,110,253,0.05);
      color: var(--primary);
      font-weight: 600;
    }

    tr:hover {
      background: rgba(13,110,253,0.03);
    }

    .btn-small {
      padding: 6px 10px;
      font-size: 0.85em;
      border-radius: 6px;
    }

    .btn-danger {
      background: var(--danger);
      color: white;
    }

    .btn-danger:hover {
      background: #c82333;
    }

    @media (max-width: 820px) {
      .admin-content {
        margin-left: 0;
        padding: 16px;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <div class="admin-content">
    <h1>Quản trị hệ thống</h1>

    <!-- Thống kê nhanh -->
    <div class="stats-grid">
      <div class="stat-card">
        <h3><%= stats.users %></h3>
        <p>Người dùng</p>
      </div>
      <div class="stat-card">
        <h3><%= stats.places %></h3>
        <p>Địa điểm</p>
      </div>
      <div class="stat-card">
        <h3><%= stats.itineraries %></h3>
        <p>Lịch trình</p>
      </div>
      <div class="stat-card">
        <h3><%= stats.activeToday %></h3>
        <p>Hoạt động hôm nay</p>
      </div>
    </div>

    <!-- Quản lý người dùng -->
    <div class="admin-section">
      <h2>Người dùng</h2>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Role</th>
            <th>Thao tác</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td>#<%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td>
                <span class="badge <%= user.role === 'admin' ? 'bg-primary' : 'bg-success' %>">
                  <%= user.role %>
                </span>
              </td>
              <td>
                <button class="btn btn-small btn-danger" onclick="deleteUser(<%= user.id %>)">
                  Xóa
                </button>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Quản lý địa điểm -->
    <div class="admin-section">
      <h2>Địa điểm (Gần đây)</h2>
      <p><a href="/admin/places" class="btn btn-ghost">Xem tất cả →</a></p>
    </div>

    <!-- Hoạt động hệ thống -->
    <div class="admin-section">
      <h2>Hoạt động gần đây</h2>
      <p style="color: var(--muted);">Chưa có log hoạt động.</p>
    </div>
  </div>

  <script>
    async function deleteUser(id) {
      if (!confirm('Xóa người dùng này? Không thể khôi phục!')) return;
      const res = await fetch(`/admin/users/${id}`, { method: 'DELETE' });
      if (res.ok) {
        location.reload();
      } else {
        alert('Xóa thất bại');
      }
    }
  </script>
</body>
</html>