<% layout('admin/layout') %>

<h2>Danh sách địa điểm</h2>

<table class="admin-table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Tên</th>
      <th>Loại</th>
      <th>Tỉnh</th>
      <th>Ảnh</th>
      <th>Lượt xem</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% places.forEach(function(p){ %>
    <tr>
      <td><%= p.id %></td>
      <td><%= p.name %></td>
      <td><%= p.type %></td>
      <td><%= p.province %></td>
      <td>
        <% if(p.image_url){ %>
        <img
          src="<%= p.image_url %>"
          alt="img"
          width="80"
          style="border-radius: 4px"
        />
        <% } %>
      </td>
      <td><%= p.views %></td>
      <td>
        <a class="admin-btn edit" href="/admin/places/edit/<%= p.id %>">Sửa</a>
        <a class="admin-btn delete" href="/admin/places/delete/<%= p.id %>"
          >Xóa</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
